<UserControl x:Class="Labb3_NET22.CreateEditQuizView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Labb3_NET22"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label x:Name="labelEditQuiz" Grid.Column="0" Grid.ColumnSpan="3" Content="Edit Quiz" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Visibility="Hidden"/>
        <Label x:Name="labelCreateNewQuiz" Grid.Column="0" Grid.ColumnSpan="3" Content="Create New Quiz" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Visibility="Hidden"/>

        <StackPanel Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <Label Content="Quiz Name:"/>
                <TextBox x:Name="txtBoxQuizName" Width="150"/>
            </StackPanel>
            <Button Content="Confirm" Click="ButtonConfirmQuizClicked" Height="30"/>
            <Button x:Name="buttonCancel" Content="Cancel" Click="ButtonCancelClicked" Height="30"/>
        </StackPanel>

        <Grid Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <Label Grid.Row="0" Grid.ColumnSpan="3" Content="Question Text" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
            <TextBox x:Name="txtBoxQuestionText" Grid.Row="1" Grid.ColumnSpan="3" TextWrapping="Wrap"/>

            <Label Grid.Row="2" Grid.Column="0" Content="Answer 1:"/>
            <TextBox x:Name="txtBoxAnswer1" Grid.Row="2" Grid.Column="1" TextWrapping="Wrap"/>
            <RadioButton x:Name="radioBtnAnswer1" Grid.Row="2" Grid.Column="2" GroupName="AnswerGroup" Content="Correct answer" IsChecked="True"/>

            <Label Grid.Row="3" Grid.Column="0" Content="Answer 2:"/>
            <TextBox x:Name="txtBoxAnswer2" Grid.Row="3" Grid.Column="1" TextWrapping="Wrap"/>
            <RadioButton x:Name="radioBtnAnswer2" Grid.Row="3" Grid.Column="2" GroupName="AnswerGroup" Content="Correct answer"/>

            <Label Grid.Row="4" Grid.Column="0" Content="Answer 3:"/>
            <TextBox x:Name="txtBoxAnswer3" Grid.Row="4" Grid.Column="1" TextWrapping="Wrap"/>
            <RadioButton x:Name="radioBtnAnswer3" Grid.Row="4" Grid.Column="2" GroupName="AnswerGroup" Content="Correct answer"/>

            <Label Grid.Row="5" Content="Category:"/>
            <ComboBox x:Name="comboBoxCategories" Grid.Row="5" Grid.Column="1"/>

            <Label Grid.Row="6" Content="Image path:"/>
            <TextBox x:Name="txtBoxImagePath" Grid.Row="6" Grid.Column="1"/>
            <TextBlock Grid.Row="6" Grid.Column="2" Text="Ex: C:\Folder\...\Image.jpg" FontSize="8" VerticalAlignment="Center"/>

            <Grid Grid.Row="7" Grid.ColumnSpan="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Button Grid.Row="0" Content="Add question" Click="ButtonAddQuestionClicked" Height="25"/>
                <Button x:Name="buttonModifyQuestion" Grid.Row="1" Content="Confirm Question Modification" Click="ButtonModifyQuestionClicked" Height="25" IsEnabled="False"/>
                <Button x:Name="buttonRemoveQuestion" Grid.Row="2" Content="Remove Question" Click="ButtonRemoveQuestionClicked" Height="25" IsEnabled="False"/>
                <Button x:Name="buttonCancelModification" Grid.Row="3" Content="Cancel Modification" Click="ButtonCancelModificationClicked" Height="25"/>
            </Grid>

        </Grid>

        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Label Grid.Row="0" Content="Questions in quiz" HorizontalAlignment="Center"/>
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                <ListBox x:Name="lstBoxQuizQuestions" Grid.Row="1" SelectionChanged="QuestionChanged"/>
            </ScrollViewer>
        </Grid>

    </Grid>
</UserControl>
